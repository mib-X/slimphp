{% extends "layout.twig" %}

{% block title %}Posts{% endblock %}
{% block head %}
    {{ parent() }}
{% endblock %}
{% block navigation %}
    <div class="container">
        <nav class="nav border-bottom py-3">
            {#        <?php foreach ($menu as $link => $value) : ?>#}
            {% for link, value in menu %}
            <a class="nav-link border-right" href="{{ link }}">{{ value|escape}}</a>
            {% endfor %}
        </nav>
    </div>
{% endblock %}
{% block content %}
    <main class="main">
        <section class="posts">
            <div class="container">
                <!-- Content here -->
                <div class="row justify-content-center">
                    {% for post in posts %}
                    <div class="col-12 post border-bottom">
                        <h2 class="h2 post__title">{{post.title}}</h2>
                        <div class="post__header">
                            <div class="post__author mr-3">
                                {{post.user.name}}
                            </div>
                            <div class="post__date">{{ post.createdAt|date("m/d/Y") }}</div>
                        </div>
                        <div class="post__body">
                            <img src="{{ post.thumb }}" alt="" class="post__img float-md-left mr-3 mb-3">
                            <div class="description">
                                {{post.description|slice(1, 200)}}
                            </div>
                        </div>
                    </div>
                    {% else %}
                    <h1>Нет записей</h1>
                    {% endfor %}
                </div>
            </div>
        </section>
    </main>
{% endblock %}